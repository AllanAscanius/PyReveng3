[BASIC]

# We don't want single letters [glq]

# Naming hint for variable names
variable-rgx=([a-fh-km-pr-z]|[a-z_][a-z0-9_]{1,30})$

# Regular expression matching correct argument names
argument-rgx=([a-fh-km-pr-z]|[a-z_][a-z0-9_]{1,30})$

# Regular expression matching correct attribute names
attr-rgx=([a-fh-km-pr-z]|[a-z_][a-z0-9_]{1,30})$


